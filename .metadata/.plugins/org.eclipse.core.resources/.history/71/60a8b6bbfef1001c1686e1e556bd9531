package org.collection;

import java.io.File;
import java.io.IOException;

public class Newfiles {
	
	public static void main(String[] args) throws Throwable {
		
		File f = new File("C:\\Users\\HP\\workspace\\IT\\test\\A\\B\\article.txt");
		
		// to create a folder
		boolean a = f.mkdir();
		System.out.println(a);
		
		// to create multiple folder
		boolean b = f.mkdirs();
		System.out.println(b);
		
		//to create a file
		boolean c = f.createNewFile();
		System.out.println(c);
		
		//is directory -----it validates end point is a directory or not
		boolean d =f.isDirectory();
		System.out.println(d);
		
		//is File ---------- it validates end point is a file or not
		boolean e =f.isFile();
		System.out.println(e);
		
		
		//isHidden ---------it validatesfile is hidden or not
		
		File f2 = new File("C:\\Users\\HP");
			File[] listFiles = f2.listFiles();
			
			for(File file : listFiles)
			{
				System.out.println(file);
			}
			
			String[] list = f2.list();
			
			for (String string : list){
				System.out.println(string);
			}
			
		
		
		
	}

}
