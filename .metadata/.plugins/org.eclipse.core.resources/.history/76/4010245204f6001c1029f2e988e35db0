package org.selenium;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.ie.InternetExplorerDriver;

public class Browser {
	
	public static void main(String[] args) {
		
		//Browser Intialization
		System.setProperty("webdriver.chrome.driver", ".//driver//chromedriver.exe");
		WebDriver driver = new ChromeDriver();
		
		//to browser launch----------get(URL);
		driver.get("https://mail.google.com/mail/u/0/");
		
		//to maximize window
		driver.manage().window().maximize();
		
		//to get title --------getTitle();
		String title = driver.getTitle();
		
		//to get current URL--------get current URL();
		String currentUrl = driver.getCurrentUrl();
		
		//navigation commands ------back(), forward(),refresh()
		driver.navigate().refresh();
		
		//to close the browser
		// to close()---- it will close current tab
		//quit()----it will close all the tabs
		
		
		driver.quit();

	
	
		
		
		
	}
	
	

}
